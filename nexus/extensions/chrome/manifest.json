{
    "manifest_version": 2,
    "name": "Nexus Web Meet Channel Manager",
    "short_name": "Nexus-X",
    "version": "1.7",
    "description": "Nexus Web Meet is the leading meeting tool for the social justice community. This extension speeds up your meeting join experience.",
    "permissions": [
        "alarms",
        "cookies",
        "notifications",
        "management"
      ],
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html",
        "default_title": "Northbridge Technology Alliance - Chrome Extension"
    },
    "background": {
        "scripts": ["vendor/js/jquery-3.4.1.min.js", "vendor/js/bootstrap.bundle.min.js", "background.js"]
    }

}
